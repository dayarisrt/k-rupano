<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Artículo</h3>
        </div>
        <div class="card-body">
            <form action="/articles/store" method="POST">
                <div class="form-group">
                    <input type="text" name="code" class="form-control" placeholder="Ingrese el código" value="{{code}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Ingrese el título" value="{{title}}">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="url_image" placeholder="Ingrese la url de la imagen">{{url_image}}</textarea>
                </div>
                <div class="form-group">
                    <select name="user" id="" class="form-control">
                        {{#each users_list}}
                            <option value="{{_id}}">{{last_name}} {{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <select name="state" class="form-control">
                        {{#each states}}
                            <option value="{{_id}}">{{description}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>