<h1>Listado de Roles</h1> <a href="/users/roles/create"><i class="fas fa-plus"></i></a>

<div class="table-responsive-sm">
  <table class="table table-hover">
    
      <!-- On rows -->
    <tr class="table-secondary">
        <td>Descripci√≥n</td>
        <td>Detalle</td>
        <td colspan="2"></td>
    </tr>
    {{#each roles}}
    <tr class="table-light">
        <td>{{description}}</td>
        <td>{{detail}}</td>
        <td>
            <a href="/users/roles/edit/{{_id}}"><i class="fas fa-edit" title="Editar"></i></a>
        </td>
        <td>
            <form action="/users/roles/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
            </form>
        </td>
    </tr>
    {{else}}
        <tr class="table-light">
        <td colspan="4">
            <p class="lead">No hay roles disponibles</p>
            <a href="/users/signup" class="btn btn-success btn-block">Crea uno!</a>
        </td>
    </tr>
    {{/each}}
  </table>
</div>