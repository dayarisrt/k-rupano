<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Usuario</h3>
        </div>
        <div class="card-body">
            <form action="/users/store" method="POST">
                <div class="form-group">
                    <input type="text" name="dni" class="form-control" placeholder="Ingrese el DNI" value="{{dni}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Ingrese el nombre" value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="last_name" class="form-control" placeholder="Ingrese el apellido" value="{{last_name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="Ingrese el email" value="{{email}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="user_name" class="form-control" placeholder="Ingrese el nombre de usuario" value="{{user_name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="pass" class="form-control" placeholder="Ingrese la contaseÃ±a" value="{{pass}}">
                </div>
                <div class="form-group">
                    <select name="rol" id="" class="form-control">
                        {{#each roles_list}}
                            <option value="{{_id}}">{{description}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>