<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Iniciar sesión</h3>
        </div>
        <img src="https://periredondo.com.ve/wp-content/uploads/2020/10/IMG_20201018_231642.jpg" alt="periredondo" class="rounded-circle mx-auto d-block m-4 logo">
        <div class="card-body">
            <form action="/users/signin" method="POST">
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Ingrese el email" value="{{email}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="pass" class="form-control" placeholder="Ingrese la contraseña" value="{{pass}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Entrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>