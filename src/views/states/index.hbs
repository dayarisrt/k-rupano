<div class="row"><a href="/states/create"><i class="fas fa-plus"></i></a>
    <div class="table-responsive-sm">
  <table class="table table-hover">
    
      <!-- On rows -->
    <tr class="table-secondary">
        <td>Descripci√≥n</td>
        <td>Estilo</td>
        <td colspan="2"></td>
    </tr>
    {{#each states}}
    <tr class="table-light">
        <td>{{description}}</td>
        <td>{{style}}</td>
        <td>
            <a href="/states/edit/{{_id}}"><i class="fas fa-edit" title="Editar"></i></a>
        </td>
        <td>
